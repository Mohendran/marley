{
  "name": "marley-client",
  "version": "0.3.2",
  "engines": {
    "node": "8.1.4",
    "npm": "5.0.3"
  },
  "scripts": {
    "start": "npm run build && npm run server",
    "prefixcss": "postcss -s postcss-scss -u autoprefixer --autoprefixer.browsers \"last 2 versions\" -r src/**/*.scss",
    "build": "npm run prefixcss && webpack && rollup --config ./config/rollup-inline.config.js && rollup --config ./config/rollup-main.config.js && rollup --config ./config/rollup-styles.config.js && rollup --config ./config/rollup-vendor.config.js",
    "build:aot": "webpack --env.aot --env.client & webpack --env.aot --env.server",
    "build:prod": "webpack --env.aot --env.client -p & webpack --env.aot --env.server",
    "prebuild": "npm run clean",
    "prebuild:aot": "npm run clean",
    "prebuild:prod": "npm run clean",
    "clean": "rimraf dist",
    "server": "nodemon dist/server.js",
    "watch": "webpack --watch"
  },
  "dependencies": {
    "@angular/animations": "^4.0.0",
    "@angular/common": "^4.0.0",
    "@angular/compiler": "^4.0.0",
    "@angular/core": "^4.0.0",
    "@angular/http": "^4.0.0",
    "@angular/platform-browser": "^4.0.0",
    "@angular/platform-browser-dynamic": "^4.0.0",
    "@angular/platform-server": "^4.0.0",
    "@angular/router": "^4.0.0",
    "@nguniversal/express-engine": "^1.0.0-beta.2",
    "bulma": "^0.3.1",
    "express": "^4.15.2",
    "rxjs": "^5.4.0",
    "serialize-javascript": "^1.3.0",
    "xhr2": "^0.1.4",
    "zone.js": "^0.8.10"
  },
  "devDependencies": {
    "@angular/compiler-cli": "^4.0.0",
    "@ngtools/webpack": "^1.3.1",
    "@types/express": "^4.0.35",
    "@types/node": "^7.0.18",
    "autoprefixer": "^7.1.2",
    "html-webpack-plugin": "^2.28.0",
    "nodemon": "^1.11.0",
    "postcss": "^6.0.9",
    "postcss-cli": "^4.1.0",
    "postcss-scss": "^1.0.2",
    "raw-loader": "^0.5.1",
    "rimraf": "^2.6.1",
    "rollup": "^0.43.0",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-multi-entry": "^2.0.1",
    "rollup-plugin-node-globals": "^1.1.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-uglify": "^2.0.1",
    "script-ext-html-webpack-plugin": "^1.7.1",
    "typescript": "^2.3.2",
    "webpack": "3.3.0",
    "webpack-merge": "^4.1.0"
  }
}
